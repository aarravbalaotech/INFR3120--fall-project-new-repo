<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <style>
        body {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            padding: 40px 20px;
        }

        .profile-container {
            max-width: 900px;
            margin: 0 auto;
        }

        .profile-header {
            background: white;
            border-radius: 20px;
            padding: 40px;
            box-shadow: 0 20px 60px rgba(0, 0, 0, 0.2);
            margin-bottom: 30px;
            text-align: center;
        }

        .profile-picture-section {
            margin-bottom: 30px;
            display: flex;
            flex-direction: column;
            align-items: center;
            gap: 20px;
        }

        .profile-picture-wrapper {
            width: 140px;
            height: 140px;
            border-radius: 50%;
            overflow: hidden;
            border: 5px solid #667eea;
            background: linear-gradient(135deg, #667eea, #764ba2);
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 3rem;
            color: white;
            font-weight: bold;
        }

        .profile-picture-wrapper img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .picture-upload-btn {
            background: linear-gradient(135deg, #667eea, #764ba2);
            color: white;
            border: none;
            padding: 12px 28px;
            border-radius: 8px;
            cursor: pointer;
            font-weight: 600;
            font-size: 0.95rem;
            transition: all 0.3s ease;
            margin-top: 20px;
            display: inline-block;
        }

        .picture-upload-btn:hover {
            transform: translateY(-3px);
            box-shadow: 0 10px 25px rgba(102, 107, 232, 0.3);
        }

        .picture-upload-btn:active {
            transform: translateY(-1px);
        }

        #profilePictureInput {
            display: none;
        }

        .profile-info h1 {
            font-size: 2rem;
            color: #333;
            margin-bottom: 10px;
        }

        .profile-info p {
            color: #666;
            font-size: 1.1rem;
            margin: 5px 0;
        }

        .profile-sections {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 20px;
            margin-top: 30px;
        }

        @media (max-width: 768px) {
            .profile-sections {
                grid-template-columns: 1fr;
            }
        }

        .section-card {
            background: white;
            border-radius: 15px;
            padding: 25px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        }

        .section-card h2 {
            color: #667eea;
            font-size: 1.3rem;
            margin-bottom: 20px;
            border-bottom: 2px solid #f0f0f0;
            padding-bottom: 15px;
        }

        .form-group {
            margin-bottom: 18px;
        }

        .form-group label {
            display: block;
            margin-bottom: 8px;
            font-weight: 600;
            color: #333;
        }

        .form-group input {
            width: 100%;
            padding: 12px 15px;
            border: 2px solid #e0e0e0;
            border-radius: 8px;
            font-size: 1rem;
            transition: all 0.3s;
        }

        .form-group input:focus {
            outline: none;
            border-color: #667eea;
            box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
        }

        .btn-submit {
            background: linear-gradient(135deg, #667eea, #764ba2);
            color: white;
            padding: 12px 30px;
            border: none;
            border-radius: 8px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s;
            width: 100%;
        }

        .btn-submit:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 25px rgba(102, 126, 234, 0.3);
        }

        .oauth-section {
            margin-top: 25px;
            padding-top: 20px;
            border-top: 2px solid #f0f0f0;
        }

        .oauth-section h3 {
            color: #666;
            font-size: 0.9rem;
            text-transform: uppercase;
            margin-bottom: 15px;
            font-weight: 600;
        }

        .oauth-buttons {
            display: flex;
            gap: 10px;
        }

        .oauth-btn {
            flex: 1;
            padding: 10px;
            border: 2px solid #e0e0e0;
            background: white;
            border-radius: 8px;
            cursor: pointer;
            font-weight: 600;
            transition: all 0.3s;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 8px;
            font-size: 0.9rem;
        }

        .oauth-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
        }

        .oauth-btn.google {
            color: #DB4437;
            border-color: #DB4437;
        }

        .oauth-btn.github {
            color: #333;
            border-color: #333;
        }

        .alert {
            margin-bottom: 20px;
            border-radius: 8px;
        }

        .loading-spinner {
            display: none;
            text-align: center;
        }

        .loading-spinner.active {
            display: block;
        }

        .success-message,
        .error-message {
            display: none;
            padding: 12px 15px;
            border-radius: 8px;
            margin-bottom: 15px;
            font-weight: 500;
        }

        .success-message {
            background: #d4edda;
            color: #155724;
            display: none;
        }

        .success-message.show {
            display: block;
        }

        .error-message {
            background: #f8d7da;
            color: #721c24;
            display: none;
        }

        .error-message.show {
            display: block;
        }

        .back-link {
            text-align: center;
            margin-top: 30px;
        }

        .back-link a {
            color: white;
            text-decoration: none;
            font-weight: 600;
            transition: all 0.3s;
        }

        .back-link a:hover {
            text-decoration: underline;
        }
    </style>
</head>
<body>
    <%- include('../partials/header') %>

    <div class="profile-container">
        <div class="profile-header">
            <div class="profile-picture-section">
                <div class="profile-picture-wrapper" id="profilePictureDisplay">
                    <% if (user.profilePicture) { %>
                        <img src="<%= user.profilePicture %>" alt="<%= user.displayName %>">
                    <% } else { %>
                        <%= user.displayName.charAt(0).toUpperCase() %>
                    <% } %>
                </div>
            </div>

            <div class="profile-info">
                <h1><%= user.displayName %></h1>
                <p><strong>Username:</strong> <%= user.username %></p>
                <p><strong>Email:</strong> <%= user.email %></p>
                <p><strong>Member Since:</strong> <%= user.createdAt.toLocaleDateString() %></p>
                
                <button class="picture-upload-btn" onclick="document.getElementById('profilePictureInput').click()" title="Upload Profile Picture">
                    üì∑ Change Profile Picture
                </button>
                <input type="file" id="profilePictureInput" accept="image/*">
            </div>
        </div>

        <div class="profile-sections">
            <!-- Change Username Section -->
            <div class="section-card">
                <h2>Change Username</h2>
                <div class="success-message" id="usernameSuccess"></div>
                <div class="error-message" id="usernameError"></div>
                
                <form id="changeUsernameForm">
                    <div class="form-group">
                        <label for="currentPassword">Current Password</label>
                        <input type="password" id="currentPassword" name="currentPassword" required placeholder="Enter your current password">
                    </div>
                    <div class="form-group">
                        <label for="newUsername">New Username</label>
                        <input type="text" id="newUsername" name="newUsername" required placeholder="Enter new username">
                    </div>
                    <button type="submit" class="btn-submit">Update Username</button>
                </form>
            </div>

            <!-- Change Password Section -->
            <div class="section-card">
                <h2>Change Password</h2>
                <div class="success-message" id="passwordSuccess"></div>
                <div class="error-message" id="passwordError"></div>
                
                <form id="changePasswordForm">
                    <div class="form-group">
                        <label for="currentPasswordForChange">Current Password</label>
                        <input type="password" id="currentPasswordForChange" name="currentPassword" required placeholder="Enter your current password">
                    </div>
                    <div class="form-group">
                        <label for="newPassword">New Password</label>
                        <input type="password" id="newPassword" name="newPassword" required placeholder="Enter new password">
                    </div>
                    <div class="form-group">
                        <label for="confirmPassword">Confirm New Password</label>
                        <input type="password" id="confirmPassword" name="confirmPassword" required placeholder="Confirm new password">
                    </div>
                    <button type="submit" class="btn-submit">Update Password</button>
                </form>
            </div>

            <!-- OAuth Section (Full Width) -->
            <div class="section-card" style="grid-column: 1 / -1;">
                <h2>Connect OAuth Providers</h2>
                <p style="color: #666; margin-bottom: 20px;">Connect your account with OAuth providers for easier login and enhanced security.</p>
                
                <div id="oauthMessage" class="alert alert-info" style="display: none;"></div>
                
                <div class="oauth-section">
                    <h3>Link your account with:</h3>
                    <div class="oauth-buttons">
                        <% if (user.googleId) { %>
                            <button class="oauth-btn google" disabled style="opacity: 0.6;">
                                <span>‚úì</span> Google Connected
                            </button>
                        <% } else { %>
                            <a href="/auth/link/google" class="oauth-btn google" style="text-decoration: none;">
                                <span>üîµ</span> Connect Google
                            </a>
                        <% } %>
                        
                        <% if (user.githubId) { %>
                            <button class="oauth-btn github" disabled style="opacity: 0.6;">
                                <span>‚úì</span> GitHub Connected
                            </button>
                        <% } else { %>
                            <a href="/auth/link/github" class="oauth-btn github" style="text-decoration: none;">
                                <span>‚¨õ</span> Connect GitHub
                            </a>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>

        <div class="back-link">
            <a href="/">‚Üê Back to Home</a>
        </div>
    </div>

    <%- include('../partials/footer') %>

    <script>
        // Profile Picture Upload
        document.getElementById('profilePictureInput').addEventListener('change', async function(e) {
            const file = e.target.files[0];
            if (!file) return;

            const formData = new FormData();
            formData.append('profilePicture', file);

            try {
                const response = await fetch('/users/profile/upload-picture', {
                    method: 'POST',
                    body: formData
                });

                const data = await response.json();

                if (response.ok) {
                    // Update the profile picture display
                    const displayDiv = document.getElementById('profilePictureDisplay');
                    displayDiv.innerHTML = `<img src="${data.profilePicture}?t=${Date.now()}" alt="Profile Picture">`;
                    alert('Profile picture updated successfully!');
                } else {
                    alert('Error: ' + (data.error || 'Failed to upload picture'));
                }
            } catch (err) {
                console.error(err);
                alert('Error uploading profile picture');
            }
        });

        // Change Username Form
        document.getElementById('changeUsernameForm').addEventListener('submit', async function(e) {
            e.preventDefault();
            
            const currentPassword = document.getElementById('currentPassword').value;
            const newUsername = document.getElementById('newUsername').value;
            const successDiv = document.getElementById('usernameSuccess');
            const errorDiv = document.getElementById('usernameError');

            try {
                const response = await fetch('/users/profile/change-username', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ currentPassword, newUsername })
                });

                const data = await response.json();

                if (response.ok) {
                    successDiv.textContent = 'Username changed successfully!';
                    successDiv.classList.add('show');
                    document.getElementById('changeUsernameForm').reset();
                    setTimeout(() => successDiv.classList.remove('show'), 4000);
                } else {
                    errorDiv.textContent = data.error || 'Failed to change username';
                    errorDiv.classList.add('show');
                    setTimeout(() => errorDiv.classList.remove('show'), 4000);
                }
            } catch (err) {
                console.error(err);
                errorDiv.textContent = 'An error occurred';
                errorDiv.classList.add('show');
            }
        });

        // Change Password Form
        document.getElementById('changePasswordForm').addEventListener('submit', async function(e) {
            e.preventDefault();
            
            const currentPassword = document.getElementById('currentPasswordForChange').value;
            const newPassword = document.getElementById('newPassword').value;
            const confirmPassword = document.getElementById('confirmPassword').value;
            const successDiv = document.getElementById('passwordSuccess');
            const errorDiv = document.getElementById('passwordError');

            if (newPassword !== confirmPassword) {
                errorDiv.textContent = 'Passwords do not match';
                errorDiv.classList.add('show');
                setTimeout(() => errorDiv.classList.remove('show'), 4000);
                return;
            }

            try {
                const response = await fetch('/users/profile/change-password', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ currentPassword, newPassword, confirmPassword })
                });

                const data = await response.json();

                if (response.ok) {
                    successDiv.textContent = 'Password changed successfully!';
                    successDiv.classList.add('show');
                    document.getElementById('changePasswordForm').reset();
                    setTimeout(() => successDiv.classList.remove('show'), 4000);
                } else {
                    errorDiv.textContent = data.error || 'Failed to change password';
                    errorDiv.classList.add('show');
                    setTimeout(() => errorDiv.classList.remove('show'), 4000);
                }
            } catch (err) {
                console.error(err);
                errorDiv.textContent = 'An error occurred';
                errorDiv.classList.add('show');
            }
        });

        // Check for OAuth connection messages
        document.addEventListener('DOMContentLoaded', function() {
            const urlParams = new URLSearchParams(window.location.search);
            const message = urlParams.get('message');
            const messageDiv = document.getElementById('oauthMessage');

            if (message === 'google_connected') {
                messageDiv.textContent = '‚úì Google account successfully connected!';
                messageDiv.style.display = 'block';
                messageDiv.className = 'alert alert-success';
                // Reload after 2 seconds to show updated status
                setTimeout(() => location.reload(), 2000);
            } else if (message === 'google_already_connected') {
                messageDiv.textContent = '‚ö† Google account is already connected to this profile.';
                messageDiv.style.display = 'block';
                messageDiv.className = 'alert alert-warning';
            } else if (message === 'github_connected') {
                messageDiv.textContent = '‚úì GitHub account successfully connected!';
                messageDiv.style.display = 'block';
                messageDiv.className = 'alert alert-success';
                // Reload after 2 seconds to show updated status
                setTimeout(() => location.reload(), 2000);
            } else if (message === 'github_already_connected') {
                messageDiv.textContent = '‚ö† GitHub account is already connected to this profile.';
                messageDiv.style.display = 'block';
                messageDiv.className = 'alert alert-warning';
            }
        });
    </script>
</body>
</html>
